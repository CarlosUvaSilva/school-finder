<h1>Schools</h1>

<ul>
  <% @schools.each do |school| %>
    <li><%= school.name %></li>
  <% end %>
</ul>

<div style="width: 100%; height: 600px;"
  data-controller="map"
  data-map-markers-value="<%= @markers.to_json %>"
  data-map-api-key-value="<%= Rails.application.credentials.dig(:mapbox_api_key) %>">
</div>
